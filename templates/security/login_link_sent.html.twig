{% extends 'base.html.twig' %}

{% block title %}Link Sent | Sentinel{% endblock %}

{% block body %}
<div class="auth-page container">
    <div class="auth-card glass-card">
        <div class="success-icon animate-pulse">✉️</div>
        <h1 class="text-gradient">Check your inbox</h1>
        <p class="text-secondary">We've sent a magic login link to <strong>{{ email }}</strong>.</p>
        
        <div class="info-box glass">
            <p>The link will expire in 10 minutes for your security.</p>
        </div>
        
        <div class="auth-footer">
            <p>Didn't receive it? <a href="{{ path('app_login') }}" class="text-gradient">Try again</a></p>
        </div>
    </div>
</div>

<style>
.auth-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}

.auth-card {
    max-width: 450px;
    width: 100%;
    padding: 3rem;
    text-align: center;
}

.success-icon {
    font-size: 4rem;
    margin-bottom: 2rem;
}

.info-box {
    margin-top: 2rem;
    padding: 1.5rem;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    color: var(--text-muted);
}

.animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: .7; transform: scale(1.05); }
}

.text-gradient {
    text-decoration: underline;
}
</style>
{% endblock %}
