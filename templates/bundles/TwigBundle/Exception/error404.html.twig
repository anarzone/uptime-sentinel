{% extends 'base.html.twig' %}

{% block title %}404 - Sentinel Lost in Space{% endblock %}

{% block body %}
<div class="error-page container">
    <div class="error-content text-center animate-float">
        <h1 class="text-gradient error-code">404</h1>
        <h2 class="error-title">Sentinel Lost in Space</h2>
        <p class="text-secondary error-desc">The resource you're looking for has drifted beyond our perimeter. It might have been moved or decommissioned.</p>
        
        <div class="error-actions">
            <a href="{{ path('app_landing_page') }}" class="btn btn-primary">Take Me Home</a>
        </div>
    </div>
    
    <div class="star-field">
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
    </div>
</div>

<style>
.error-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 2rem;
    position: relative;
    overflow: hidden;
}

.error-content {
    max-width: 600px;
    z-index: 2;
}

.error-code {
    font-size: 10rem;
    line-height: 1;
    margin-bottom: 2rem;
    font-weight: 800;
}

.error-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
}

.error-desc {
    font-size: 1.25rem;
    margin-bottom: 3rem;
}

.error-actions {
    display: flex;
    justify-content: center;
}

/* Star effect background */
.star-field {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0.3;
}

.star {
    position: absolute;
    background: white;
    border-radius: 50%;
    filter: blur(1px);
}

.star:nth-child(1) { top: 20%; left: 30%; width: 3px; height: 3px; animation: pulse 3s infinite; }
.star:nth-child(2) { top: 70%; left: 80%; width: 5px; height: 5px; animation: pulse 4s infinite 1s; }
.star:nth-child(3) { top: 40%; left: 10%; width: 2px; height: 2px; animation: pulse 5s infinite 2s; }

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.3; }
    50% { transform: scale(1.5); opacity: 0.7; }
}
</style>
{% endblock %}
