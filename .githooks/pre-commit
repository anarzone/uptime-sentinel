#!/bin/bash

# Pre-commit hook for FastReserve
# Runs PHP CS Fixer, PHPStan, and Tests before allowing commits

set -e

echo "üîç Running pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if composer is available
if ! command -v composer &> /dev/null; then
    echo -e "${RED}‚ùå Error: composer not found${NC}"
    echo "Please ensure composer is installed and in your PATH"
    exit 1
fi

# Function to run a check and report result
run_check() {
    local name=$1
    local command=$2

    echo -e "${YELLOW}‚ñ∂ Running $name...${NC}"

    if eval "$command"; then
        echo -e "${GREEN}‚úì $name passed${NC}"
        echo ""
        return 0
    else
        echo -e "${RED}‚úó $name failed${NC}"
        echo ""
        return 1
    fi
}

# Run PHP CS Fixer (check only, doesn't modify files)
run_check "PHP CS Fixer" "composer check-style"

if [ $? -ne 0 ]; then
    echo -e "${RED}‚ùå Code style issues found!${NC}"
    echo ""
    echo "To fix style issues, run:"
    echo "  ${YELLOW}composer format${NC}"
    echo ""
    echo "Then commit again."
    echo ""
    echo "To bypass this hook (not recommended), use:"
    echo "  ${YELLOW}git commit --no-verify${NC}"
    exit 1
fi

# Run PHPStan
run_check "PHPStan" "composer analyze"

if [ $? -ne 0 ]; then
    echo -e "${RED}‚ùå Static analysis errors found!${NC}"
    echo ""
    echo "Please fix the errors above before committing."
    echo ""
    echo "To bypass this hook (not recommended), use:"
    echo "  ${YELLOW}git commit --no-verify${NC}"
    exit 1
fi

# Run Tests
run_check "Tests" "composer test"

if [ $? -ne 0 ]; then
    echo -e "${RED}‚ùå Tests failed!${NC}"
    echo ""
    echo "Please fix the failing tests before committing."
    echo ""
    echo "To run tests manually:"
    echo "  ${YELLOW}composer test${NC}"
    echo ""
    echo "To bypass this hook (not recommended), use:"
    echo "  ${YELLOW}git commit --no-verify${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ All checks passed!${NC}"
echo "Proceeding with commit..."
exit 0